{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"outDir": "dist/",
		"lib": ["es2015", "es2017", "DOM"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": "src/",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"jsx": "react-jsx"
	},
	"include": ["src/**/*.*"],
	"exclude": ["node_modules"],
	"typeRoots": ["node_modules/*"]
}
